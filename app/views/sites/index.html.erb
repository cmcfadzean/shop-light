
<h1>Listing Sites</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Shopify url</th>
      <th>Shopify key</th>
      <th>Logo</th>
      <th>Primary color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.title %></td>
        <td><%= site.url %></td>
        <td><%= site.shopify_url %></td>
        <td><%= site.shopify_key %></td>
        <td><%= site.logo %></td>
        <td><%= site.primary_color %></td>
        <td><%= link_to 'Collections', site_collections_path(site) %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

