<div class="auth-sidebar col flex-fill">
  <div class="auth-sidebar-inner row">
    <div class="auth-sidebar-form col">
      <div class="auth-sidebar-logo">
        <%= image_tag("logo.png")%>
      </div>
      <h2 class="auth-sidebar-title">Sign up Free</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm" %>
        </div>

        <div class="form-action">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="auth-sidebar-action col d-flex flex-column justify-content-center">
      <h2>Have an account?</h2>
      <p>Sign in to your existing shoplight account here.</p>
      <%= link_to "Sign in", new_session_path(resource_name) %>
    </div>
  </div>
</div>
<div class="auth-content col flex-fill" style="background-image: url(<%= image_url "sign_in.jpg" %>);"></div>
