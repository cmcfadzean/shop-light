<style>
  .navbar {
    background: <%= @site.primary_color %>;
  }
</style>

<div class="navbar">
  <div class="container">
    <div class="col-sm-2">
      <% if @site.logo != "" %>

      <% else %>
        <div class="navbar-logo">
          <%= @site.title %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-10 text-right">
      <% @site.collections.each do |collection| %>
        <a class="navbar-link" href="#collection-<%= collection.id %>"><%= collection.title %></a>
      <% end %>
    </div>
  </div>
</div>
<div class="collections">
  <% @site.collections.each do |collection| %>
    <div class="collection" id="collection-<%= collection.id %>">
      <div class="container">
        <%= render 'buy_button', site: @site, collection: collection %>
      </div>
    </div>
  <% end %>
</div>
